<UserControl x:Class="WoozyTune.UserControls.UserTrackUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WoozyTune.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="350">
    <Grid>
        <StackPanel Orientation="Horizontal" MouseDown="StackPanel_MouseDown">
            <Image Stretch="Fill" Name="Image" Width="40" Height="40"/>
            <TextBlock Name="Track_Name_TextBlock" VerticalAlignment="Center" Padding="6 0 0 0" FontSize="20" FontFamily="Calibri" Width="310"/>
        </StackPanel>
    </Grid>
</UserControl>
