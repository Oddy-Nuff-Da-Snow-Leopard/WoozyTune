<UserControl x:Class="WoozyTune.UserControls.MusicControlToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WoozyTune.UserControls"
             mc:Ignorable="d" 
             Height="40" Width="1280">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="81*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="81*"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Column="2">
            <Image Width="30"></Image>
        </Button>
        <Button Grid.Column="1" Name="Playback_Button" Click="Playback_Button_Click"/>
    </Grid>
</UserControl>
