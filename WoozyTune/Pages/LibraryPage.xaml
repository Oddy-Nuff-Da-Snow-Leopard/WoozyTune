<Page x:Class="WoozyTune.Pages.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WoozyTune.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="580" d:DesignWidth="1024" Background="Blue"
      Title="LibraryPage">

    <Grid Background="#FFF1F1F1">
        <ScrollViewer>
        <Grid Margin="20" Background="White" Name="Tracks_Grid" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Label Padding="0" FontSize="24" VerticalAlignment="Center" Content="Tracks you recently listened to"/>
        </Grid>
        </ScrollViewer>
    </Grid>
</Page>
